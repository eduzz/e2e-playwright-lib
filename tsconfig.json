{
  "compilerOptions": {
    "target": "es2019",
    "moduleResolution": "node16",
    "module": "node16",
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "declaration": true,
    "importHelpers": true,
    "inlineSources": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "outDir": "./dist",
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
